<UserControl x:Class="StoreManagement.Resources.UserControls.ProductControlUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreManagement.Resources.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Foreground="{DynamicResource Gray1}"
             DataContext="{StaticResource ProductVM}"
             d:DesignHeight="45" 
             d:DesignWidth="955">
    <Grid 
        x:Name="grdMain"
        Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"></ColumnDefinition>
                <ColumnDefinition Width="180"></ColumnDefinition>
                <ColumnDefinition Width="165"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock 
            x:Name="txbID"
            Text="No"
            Grid.Column="0" 
            Margin="30,10,30,10"
            TextWrapping="Wrap" 
            FontSize="18" 
            FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle 
            Grid.Column="0" 
            HorizontalAlignment="Right" 
            Height="30" 
            Margin="0" 
            Width="2"
            VerticalAlignment="Center"/>
            <TextBlock 
            x:Name="txbName"
            Text="Tên mặt hàng" 
            Grid.Column="1"
            HorizontalAlignment="Left" 
            Margin="30,10,30,10"
            TextWrapping="Wrap" 
            FontSize="18" 
            FontWeight="SemiBold" VerticalAlignment="Top" />
            <Rectangle 
            Grid.Column="1" 
            HorizontalAlignment="Right" 
            Height="30" 
            Margin="0" 
            Width="2"
            VerticalAlignment="Center"/>
            <TextBlock 
            x:Name="txbUnit"
            Text="Đơn vị tính" 
            Grid.Column="2"
            HorizontalAlignment="Left" 
            Margin="30,10,30,10"
            TextWrapping="Wrap" 
            FontSize="18" 
            FontWeight="SemiBold" VerticalAlignment="Top"/>
            <Rectangle 
            Grid.Column="2" 
            HorizontalAlignment="Right" 
            Height="30" 
            Margin="0" 
            Width="2"
            VerticalAlignment="Center"/>
            <TextBlock 
            x:Name="txbPrice"
            Text="Giá bán" 
            Grid.Column="3"
            HorizontalAlignment="Left" 
            Margin="30,10,30,10"
            TextWrapping="Wrap" 
            FontSize="18" 
            FontWeight="SemiBold" VerticalAlignment="Top"/>
            <Rectangle 
            Grid.Column="3" 
            HorizontalAlignment="Right" 
            Height="30" 
            Margin="0" 
            Width="2" 
            VerticalAlignment="Center"/>
            <TextBlock 
            x:Name="txbCount"
            Text="Số lượng" 
            Grid.Column="4"
            HorizontalAlignment="Left" 
            Margin="20,10,40,10"
            TextWrapping="Wrap" 
            FontSize="18" 
            FontWeight="SemiBold" VerticalAlignment="Top"/>
            <Button
            x:Name="btnEditProduct"
            Grid.Column="5"
            ToolTip="Edit product"
            Height="30"
            Width="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0 0 105 5"
            FontSize="16"
            Padding="0"
            FontWeight="SemiBold"
            Background="{x:Null}" 
            BorderBrush="{x:Null}" 
            Foreground="#57548B" 
            Command="{Binding EditProductCommand}"
            CommandParameter="{Binding ElementName=txbID}">
                <materialDesign:PackIcon
                Kind="SquareEditOutline"
                Height="24"
                Width="24">
                </materialDesign:PackIcon>
            </Button>
            <Button 
            Grid.Column="5"
            x:Name="btnDeleteProduct"
            Command="{Binding DeleteProductCommand}"
            CommandParameter="{Binding ElementName=txbId}"
            ToolTip="Xóa mặt hàng" 
            Height="30"
            Margin="0,0,50,5" 
            FontSize="16" 
            VerticalAlignment="Center" 
            FocusVisualStyle="{x:Null}"
            Width="40"
            Foreground="#FFF44336" 
            HorizontalAlignment="Right" 
            Background="{x:Null}" 
            BorderBrush="{x:Null}"
            FontWeight="SemiBold" 
            Padding="0" >
                <materialDesign:PackIcon 
                Kind="Delete" 
                Height="24"
                Width="24"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1"
            Width="955"
            Background="#DDDDDD">
        </Grid>
    </Grid>
</UserControl>
