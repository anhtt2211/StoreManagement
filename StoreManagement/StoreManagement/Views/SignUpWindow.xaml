<Window x:Class="StoreManagement.Views.SignUpWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:StoreManagement.Views"
        mc:Ignorable="d"
         DataContext="{StaticResource SignUpVM}"
        Title="SignUp" 
        Height="700" 
        Width="920 " 
            x:Name="wdSignUp"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="30" 
            Background="#FCE5EC"
            BorderThickness="0" Margin="0,0,0,0">
        <Border.Effect>
            <DropShadowEffect 
                BlurRadius="20"
                Opacity="0.4"/>
        </Border.Effect>
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFEC74E7" Offset="1"/>
                <GradientStop Color="#EAF97298" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid Margin="0,0,0,0" >
            
            <Grid 
            x:Name="grdImage"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Height="220"
            Width="220"
            Margin="78,236,0,0">
                <Rectangle
                
                Stroke="#57548B"
         
                Opacity="0.53"
                StrokeDashArray="4 2"
                StrokeThickness="4" 
                RadiusX="5"
                RadiusY="5" Margin="-2,0,2,0"/>
                <Button 
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Width="140"
                Content="Select image"
                Background="#F79BB5"
                Foreground="#57548B"
                FocusVisualStyle="{x:Null}"
                FontWeight="SemiBold"
                FontSize="18"
                Margin="40,0,40,13"
                Command="{Binding SelectImageCommand}"
                CommandParameter="{Binding ElementName=grdImage}"/>
                <materialDesign:PackIcon 
                Kind="ImageEdit" 
                HorizontalAlignment="Center"
                VerticalAlignment="Top" 
                Width="80"
                Height="80"
                Margin="68,60,72,0"
                Foreground="#57548B"
                Opacity="0.75"/>

            </Grid>
            <TextBox  x:Name="txtUsername"
                    materialDesign:HintAssist.Hint="Username" 
                     Style="{StaticResource MaterialDesignTextBox}" 
                     Height="52" 
                     Width="500" 
                     Background="White" 
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                     Margin="335,277,0,0" 
                     HorizontalContentAlignment="Center" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     FontFamily="Segoe UI" 
                     FontSize="22" 
                     VerticalContentAlignment="Center"
                      Text="{Binding Username}">
                

            </TextBox>
            <TextBox  x:Name="pwbPassword"
                    materialDesign:HintAssist.Hint="Password" 
                     Style="{StaticResource MaterialDesignTextBox}" 
                     Height="52" Width="500" Background="White" 
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                     Margin="335,358,0,0" 
                     HorizontalContentAlignment="Center" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     FontFamily="Segoe UI" 
                     FontSize="22" 
                 
                     VerticalContentAlignment="Center" 
                       Text ="{Binding pwbPassword}"
                      >
               
            </TextBox>
            <TextBox  x:Name="pwbPasswordConfirm"
                    materialDesign:HintAssist.Hint="Enter your password again" 
                     Style="{StaticResource MaterialDesignTextBox}"
                     Height="52" 
                     Width="500" 
                     Background="White" 
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                     Margin="335,440,0,0"
                     HorizontalContentAlignment="Center" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     FontFamily="Segoe UI" 
                     FontSize="22" 
                 
                     VerticalContentAlignment="Center" 
                      Text ="{Binding pwbPasswordConfirm}">
                
            </TextBox>

            <Button x:Name="btSignUp" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Height="66" 
                    Width="500" 
                    Foreground="#57548B"
                    Background="#F79BB5"
                    materialDesign:ButtonAssist.CornerRadius="38"
                    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Margin="215,568,0,66" 
                    HorizontalContentAlignment="Center" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Stretch"
                     Command="{Binding SignUpCommand}"
            CommandParameter="{Binding ElementName=wdSignUp}" Click="btSignUp_Click">
                
                <TextBlock Text="Get started" 
                           FontFamily="Segoe UI" 
                           FontSize="22"
                           Width="110" 
                           Height="40"/>
            </Button>
            <CheckBox x:Name="cbRemember" 
                      Margin ="692,525,0,0" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      VerticalContentAlignment="Center"
                      HorizontalContentAlignment="Center" 
                      RenderTransformOrigin="1.602,0.053">
                <CheckBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="2" ScaleX="2"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="19.396" Y="-7.867"/>
                    </TransformGroup>
                </CheckBox.RenderTransform>
                <CheckBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                             StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                    </LinearGradientBrush>
                </CheckBox.Background>
            </CheckBox>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="I have read" 
                       Height="33" 
                       Width="118" 
                       Margin="378,522,0,145" 
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Left" 
                       TextAlignment="Left"
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextDecorations="{x:Null}" RenderTransformOrigin="0.516,-1.784">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#7D78A2"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="The Privacy Policy" 
                       Height="33" 
                       Width="170" 
                       Margin="496,522,0,145" 
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Left" 
                       TextAlignment="Left"
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextDecorations="Underline"
                   >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#7D78A2"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Button x:Name="btBack"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="MaterialDesignIconButton"
                    Background="White" 
                    Margin="35,35,0,0" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                     Foreground="#57548B"
                     Command="{Binding CloseCommand}"
                    CommandParameter="{Binding ElementName=wdSignUp}">
                
                <materialDesign:PackIcon Kind="ArrowLeft"  />
            </Button>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="SIGN UP!" 
                       Height="90" 
                       Width="310" 
                       Margin="310,80,0,0"
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left" 
                       TextAlignment="Center"
                       FontFamily="Segoe UI" 
                       FontSize="65" 
                       FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.1,0">
                        <GradientStop Color="#F97299"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="NOW" 
                       Height="30" 
                       Width="56" 
                       Margin="610
                       ,80,0,0" 
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left" 
                       TextAlignment="Center"
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#F97299"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBox x:Name="displayname"
                    materialDesign:HintAssist.Hint="Displayname" 
                Style="{StaticResource MaterialDesignTextBox}"
                Height="52" 
                Width="500" 
                Background="White" 
                materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                Margin="335,201,0,0"
                HorizontalContentAlignment="Center" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left"
                FontFamily="Segoe UI" 
                FontSize="22" 
                
               
                VerticalContentAlignment="Center" >
               

            </TextBox> 
            
        </Grid>
        
    </Border>
</Window>
