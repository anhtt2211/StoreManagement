<Window x:Class="StoreManagement.Views.HomeWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManagement.Views"
        mc:Ignorable="d"
        Title="Login" Height="960" Width="1828">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#B2F3C9D5" Offset="1"/>
                <GradientStop Color="#00FBE8E9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btLogin" Style="{StaticResource MaterialDesignRaisedButton}"
                Height="115" Width="548" 
                materialDesign:ButtonAssist.CornerRadius="24"
                ToolTip="MaterialDesignRaisedButton with Round Corners" Margin="1173,494,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEC74E7" Offset="0"/>
                    <GradientStop Color="#EAF97298" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <TextBlock Text="Ready to sign in" FontFamily="Segoe UI" FontSize="30" Width="216" Height="45" />
        </Button>
        <TextBox x:Name="txtUser" Style="{StaticResource MaterialDesignTextBox}" Height="115" Width="548" Background="White" 
                 materialDesign:TextFieldAssist.TextFieldCornerRadius="24" Margin="1173,228,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left"
                 FontFamily="Segoe UI" FontSize="30" Text="Username" VerticalContentAlignment="Center" 
                 >
        </TextBox>
        <TextBox x:Name="txtPassword" Style="{StaticResource MaterialDesignTextBox}" Height="115" Width="548" Background="White" 
                materialDesign:TextFieldAssist.TextFieldCornerRadius="24" Margin="1173,357,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center"
                FontFamily="Segoe UI" FontSize="30" Text="Password"  
                 >
        </TextBox>
        <Ellipse Height="1257" Width="1257"
                 Margin="-285,45,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                 StrokeThickness ="300" >
            <Ellipse.Stroke>
                <RadialGradientBrush>
                    <GradientStop Color="#3FFFFFFF" Offset="0"/>
                    <GradientStop Color="#AAE89F9F"/>
                </RadialGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" Text="Hi There!" Height="90" Width="279" 
                   Margin="1307,112,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center"
                   FontFamily="Segoe UI" FontSize="60" FontWeight="Bold"
                   >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFF97298"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" Text="AGENCY MANAGEMENT" Height="147.53" Width="1133" 
                   Margin="62,697.7,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center"
                   FontFamily="Segoe UI" FontSize="90" FontWeight="Bold" 
                   >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#6F6C99"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" Text="AGENCY MANAGEMENT" Height="147.53" Width="1133" 
                   Margin="0,780,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center"
                   FontFamily="Segoe UI" FontSize="90" FontWeight="Bold" 
                   >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#E2E2E8"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" Text="Remeber your account" Height="33" Width="277" 
                   Margin="1342,640,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center"
                   FontFamily="Segoe UI" FontSize="22" FontWeight="Bold"
                   >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#7D78A2"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" Text="Forgot your password" Height="33" Width="277" 
                   Margin="1342,690,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center"
                   FontFamily="Segoe UI" FontSize="22" FontWeight="Bold"
                   >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#7D78A2"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" Text="New arround here ?" Height="33" Width="277" 
                   Margin="1300,739,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center"
                   FontFamily="Segoe UI" FontSize="25"
                   >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Button x:Name="btSignUp"
            Style="{StaticResource MaterialDesignFlatButton}" Height="38" Width="150"
            ToolTip="MaterialDesignFlatButton" Margin="1550,735,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Sign Up" FontFamily="Segoe UI" FontSize="24" Width="150" Height="45" />
        </Button>
        <CheckBox x:Name="cbRemember" 
                  Margin ="1320,645,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                </TransformGroup>
            </CheckBox.RenderTransform>
            <CheckBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </CheckBox.Background>
        </CheckBox>
        <CheckBox x:Name="cbForgot" 
                  Margin ="1320,690,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                </TransformGroup>
            </CheckBox.RenderTransform>
            <CheckBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </CheckBox.Background>
        </CheckBox>
    </Grid>
</Window>