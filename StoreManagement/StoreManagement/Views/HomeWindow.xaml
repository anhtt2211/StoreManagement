            <Grid
                x:Name="grdMain"
                Height="665"
                Width="1140"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Visibility="Hidden">

                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" 
                        Margin="30,0,336.308,0">
                        <TextBlock
                            Text="MY STORES"
                            Foreground="#F97298"
                            FontSize="25"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Row="1" 
                        Margin="65,0,316.308,0.4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="54*"/>
                            <ColumnDefinition Width="65*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Text="TODAY RANKING"
                            FontWeight="DemiBold"
                            FontSize="18"
                            Foreground="#504D85"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="20,3,0,3.4">
                        </TextBlock>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <controls:StoresHomeUC
                            Margin="30 5 30 5"
                            Background="#FF7979"
                            Opacity="0.86">
                        </controls:StoresHomeUC>
                    </Grid>
                    <Grid Grid.Column="1">
                        <controls:StoresHomeUC
                            Margin="30 5 30 5"
                            Opacity="0.60"
                            Background="#1BE5B1">

                        </controls:StoresHomeUC>
                    </Grid>
                    <Grid Grid.Column="2">
                        <controls:StoresHomeUC
                            Margin="30 5 30 5"
                            Opacity="0.60"
                            Background="#FFD599">
                        </controls:StoresHomeUC>
                    </Grid>
                    <Grid Grid.Column="3">
                        <controls:StoresHomeUC
                            Margin="30 5 30 5"
                            Opacity="0.6"
                            Background="#86E3FF">
                        </controls:StoresHomeUC>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2">
                    <lvc:CartesianChart 
                        Series="{Binding SeriesCollection}"
                        LegendLocation="Left"
                        Margin="0 20 25 0">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis 
                                Title="Salesman" 
                                Labels="{Binding Labels}">
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis 
                                Title="" 
                                LabelFormatter="{Binding Formatter}">
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Grid>

            <Grid
                x:Name="grdProduct"
                Height="665"
                Width="1140"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Visibility="Visible">
                <Grid
                    Width="1065"
                    Height="3" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Background="#FBA1BB"
                    Margin="50 0 70 0">
                </Grid>
                <Button 
                    x:Name="btnAddProduct"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Content="Add product"
                    FontFamily="Segoe UI"
                    Margin="929 20 0 0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    ToolTip="Thêm sản phẩm"
                    Command="{Binding AddProductCommand}"
                    CommandParameter="{Binding ElementName=wdHome}">
                </Button>
                <Grid 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Top"
                    Margin="65,80,80,0"
                    Height="530"
                    Width="955"
                    Background="#FCE5EC">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <!--<TextBlock Grid.Row="0"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
